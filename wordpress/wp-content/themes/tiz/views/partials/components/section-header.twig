{# Section Header component
Inputs:
- title (string, required) — can include <span>/<strong> tags
- description (string, optional)
- primary_button (object, optional) — { label, link }
- secondary_button (object, optional) — { label, link }
- context (string, optional) — passed to button component (e.g. 'full_background')
- align (string, optional) — 'left' | 'center' (default: 'left')
- container_classes (string, optional)
- title_classes (string, optional)
- description_classes (string, optional)
- buttons_classes (string, optional)
#}
{% if title %}
<div class="section-header mb-10 {{ container_classes|default('container mx-auto flex flex-col lg:flex-row items-start lg:items-center justify-between gap-6') }}">
  <div class="{{ align == 'center' ? 'text-center mx-auto' : 'text-left' }} max-w-3xl">
    <h2 class="scroll-animate {{ title_classes|default('text-4xl md:text-5xl text-bay-of-many-900') }} [&>span]:text-dodger-blue-600 [&>span]:font-semibold">{{ title }}</h2>
    {% if description %}
      <p class="mt-3 scroll-animate text-tiz-subtitle {{ description_classes|default('text-wild-blue-yonder-600') }}">{{ description }}</p>
    {% endif %}
  </div>

  {% if primary_button or secondary_button %}
  <div class="{{ buttons_classes|default('flex flex-col sm:flex-row items-start sm:items-center gap-3 shrink-0 lg:ml-8 lg:self-end') }} {{ align == 'center' ? 'sm:justify-center sm:mx-auto' : '' }} scroll-animate">
    {% if primary_button and primary_button.label and primary_button.link %}
      {% include 'partials/components/button.twig' with { button: primary_button, variant: 'primary', context: context, extra_classes: 'uppercase tracking-wide text-xs md:text-sm' } %}
    {% endif %}
    {% if secondary_button and secondary_button.label and secondary_button.link %}
      {% include 'partials/components/button.twig' with { button: secondary_button, variant: 'secondary', context: context, extra_classes: 'uppercase tracking-wide text-xs md:text-sm' } %}
    {% endif %}
  </div>
  {% endif %}
</div>
{% endif %}
